{
  "name": "pdf-compressor-pwa",
  "version": "1.0.0",
  "description": "A Progressive Web App for compressing PDF files",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack serve --config webpack.dev.js",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "build:analyze": "webpack --config webpack.prod.js --json > dist/stats.json && npm run analyze",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:bundle": "node performance/bundle-size.test.js",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "perf": "lighthouse http://localhost:3000 --config-path=performance/lighthouse.config.js",
    "perf:ci": "lhci autorun",
    "docker:build": "docker build -t pdf-compressor-pwa .",
    "docker:run": "docker run -d -p 8080:80 pdf-compressor-pwa",
    "deploy:github": "npm run build && gh-pages -d dist",
    "prepare": "husky install",
    "format": "prettier --write .",
    "lint": "eslint src/**/*.js"
  },
  "keywords": [
    "pdf",
    "compressor",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "is-fullwidth-code-point": "^5.1.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.4.120",
    "string-width": "^8.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@playwright/test": "^1.36.1",
    "@types/jest": "^29.5.3",
    "babel-loader": "^9.1.3",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.31.1",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.45.0",
    "gh-pages": "^5.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.1",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.6.1",
    "jest-html-reporters": "^3.1.7",
    "jsdom": "^22.1.0",
    "jsdom-global": "^3.0.2",
    "lighthouse": "^10.2.0",
    "lighthouse-ci": "^1.0.0",
    "lint-staged": "^13.2.3",
    "mini-css-extract-plugin": "^2.7.6",
    "playwright": "^1.36.1",
    "prettier": "^3.0.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.76.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.9.0",
    "webpack-pwa-manifest": "^4.3.0",
    "workbox-webpack-plugin": "^6.5.4",
    "worker-loader": "^3.0.8"
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
